<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <%- include('common/styles'); -%>
  <link rel="stylesheet" href="/css/customer-room.css">

  <script src="https://static.opentok.com/v2/js/opentok.min.js"></script>
  <script type="text/javascript">
      var apiKey = '<%= apiKey %>';
      var sessionId = '<%= sessionId %>';
      var token = '<%= token %>';
      var userName = '<%= userName %>';
  </script>
</head>
<body>
  <%- include('common/header'); -%>

  <div class="container customer-room">
    <div>
      <span>Share Screen: </span>
      <label class="switch">
        <input type="checkbox" id="share-screen-switch">
        <span class="slider round"></span>
      </label>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md mx-auto">
          <div class="text-center">Agent</div>
          <div class="stream-container mx-auto">
            <div id="subscribers"></div>
          </div>
        </div>
        <div class="col-md mx-auto">
          <div class="text-center">Customer</div>
          <div class="stream-container mx-auto">
            <div id="publisher"></div>
          </div>
        </div>
      </div>
      <div class="row" id="share-screen-container">
        <!-- <div id="pub-share-screen"></div> -->
        <!-- <div id="sub-share-screen"></div> -->
      </div>
    </div>
    <div id="empty-share-screen">
      <img src="/img/vonage-white.png" alt="" srcset="">
      <p>No one is currently sharing their screen.</p>
    </div>
  </div>
  <script type="module"  src="/js/vonage-room/opentok.js"></script>
</body>
</html>